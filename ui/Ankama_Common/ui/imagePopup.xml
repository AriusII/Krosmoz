<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition modal="true" usePropertiesCache="false">
    <Import url="[config.mod.template.button]iconButton.xml" />
    
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="btn.css" value="[local.css]button.css" />
		<Constant name="btn.file" value="[local.assets]btn_orange" />
		<Constant name="lbl.css" value="[local.css]normal.css" />
	</Constants>

	<Container name="imgPopCtr">
		<Anchors>
			<Anchor relativePoint="CENTER" point="CENTER" />
		</Anchors>
		
		<Size>
			<AbsDimension x="550" />
		</Size>
		
		<shadowColor>[colors.ui.shadow]</shadowColor>
		<mouseEnabled>true</mouseEnabled>

		<Container>
			<Size>
				<RelDimension x="1" y="1"/>
			</Size>
			<Anchors>
				<Anchor relativePoint="CENTER" point="CENTER" />
			</Anchors>
			
			<Texture name="tx_background" strata="LOW">
				<Size>
					<RelDimension x="1" y="1"/>
				</Size>
				<uri>[local.assets]tx_generalBackgroundWithTitle</uri>
			</Texture>


			<iconButton name="btn_close">
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" />
				</Anchors>
				<Size>
					<AbsDimension x="57" y="36" />
				</Size>
				<uri>[local.assets]btn_cornerCross</uri>
			</iconButton>



			<Label name="lbl_title">
				<Anchors>
					<Anchor>
						<AbsDimension x="13" y="25" />
					</Anchor>
					<Anchor relativePoint="TOPRIGHT">
						<AbsDimension x="-12" y="25" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension y="25"/>
				</Size>
				<css>[local.css]title.css</css>
				<cssClass>center</cssClass>
				<verticalAlign>center</verticalAlign>
			</Label>




			<Texture name="tx_image">
				<Anchors>
					<Anchor relativeTo="tx_background" point="TOPLEFT">
						<AbsDimension x="7" y="73" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="135" y="125"/>
				</Size>
				<autoGrid>false</autoGrid>
			</Texture>

				
							
			<Label name="lbl_content">
				<Anchors>
					<Anchor relativeTo="tx_background" point="TOPLEFT">
						<AbsDimension x="147" y="63" />
					</Anchor>
					<Anchor relativePoint="BOTTOMRIGHT">
						<AbsDimension x="-20" y="-55" />
					</Anchor>
				</Anchors>
				<css>[local.css]normal.css</css>
				<cssClass>center</cssClass>
				<border>true</border>
			</Label>


			<Container name="ctr_buttons">
				<Size>
					<AbsDimension y="27"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM" relativePoint="BOTTOM">
						<AbsDimension x="0" y="-20" />
					</Anchor>
				</Anchors>
			</Container>
		</Container>
	</Container>
</Definition>
