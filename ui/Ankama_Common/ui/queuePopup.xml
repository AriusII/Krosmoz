<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition modal="true">
	<Import url="[config.mod.template]button/greyButton.xml" />
	
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
	</Constants>
	
	<Container name="bg_queue_wait">
		<Size>
			<RelDimension x="1" y="1" />
		</Size>
		<bgColor>0x000000</bgColor>
		<alpha>0.2</alpha>
	</Container>
		
	<Container name="queue_wait">
		<Size>
			<AbsDimension x="550" y="280" />
		</Size>
		
		
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" />
		</Anchors>
		
		<!-- Texture tx_background-->
		
		<Texture name="tx_background">
			<Size>
				<AbsDimension x="568" y="200" />
			</Size>
			<autoGrid>true</autoGrid>
			<uri>[local.assets]tx_generalBackgroundWithTitle</uri>
		</Texture>

		<!-- Label lbl_title-->

		<Label>
			<Anchors>
				<Anchor>
					<AbsDimension x="18" y="15" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="534" y="35" />
			</Size>
			<text>[ui.queue.wait]</text>
			<css>[local.css]title.css</css>
			<cssClass>center</cssClass>
			<verticalAlign>center</verticalAlign>
		</Label>

		<!-- Label lbl_text2-->

		<Label name="lbl_text2">
			<Anchors>
				<Anchor>
					<AbsDimension x="18" y="45" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="534" y="100" />
			</Size>
			<wordWrap>true</wordWrap>
			<css>[local.css]normal.css</css>
			<cssClass>center</cssClass>
			<verticalAlign>center</verticalAlign>
		</Label>

		<!-- Button btn_back-->
		
		<greyButton label="[ui.queue.back]" name="btn_back" width="308" height="27">
			<Anchors>
				<Anchor>
					<AbsDimension x="130" y="146" />
				</Anchor>
			</Anchors>
			<Hooks>
				<onRelease />
			</Hooks>
		</greyButton>
		
	</Container>
</Definition>