<greyButton>
	
	<!-- Parametres du template -->
	<Param name="width" >100</Param>
	<Param name="height" >30</Param>
	<Param name="label">Text</Param>
	<Param name="name" />
	<Param name="Anchors" />
	<Param name="Hooks" />
	<Param name="css" >[config.ui.skin]css/button.css</Param>
	<Param name="cssClass" >p</Param>
	
	<!-- Variables internes au template -->
	<Var name="labelWidth">#width - 4</Var>	
	<Var name="textureName">'btn_texture_' + '#name'</Var>
	<Var name="lblName">'btn_lbl_' + '#name'</Var>
	
	<Button name="#name">
		<Common>
			<Anchors>#Anchors</Anchors>
			<Texture strata="LOW" name="$textureName">
				<Size>
					<AbsDimension x="#width" y="#height" />
				</Size>
				<gotoAndStop>normal</gotoAndStop>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]btn_beige</uri>
			</Texture>
			
			<Label name="$lblName">
				<Size>
					<AbsDimension x="$labelWidth" y="20" />
				</Size>
				<Anchors>
					<Anchor relativeTo="$textureName" relativePoint="CENTER" point="CENTER" />
				</Anchors>
				<text>#label</text>
				<css>#css</css>
				<cssClass>#cssClass</cssClass>
				<verticalAlign>center</verticalAlign>
			</Label>
			
			<Hooks>#Hooks</Hooks>
		</Common>
		
		<State type="OVER">
			<SetProperties target="$textureName">
				<gotoAndStop>over</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="PRESSED">
			<SetProperties target="$textureName">
				<gotoAndStop>pressed</gotoAndStop>
			</SetProperties>
		</State>
	</Button>
	
</greyButton>