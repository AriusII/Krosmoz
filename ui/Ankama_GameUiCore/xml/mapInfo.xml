			<Anchors>
				<Anchor>
					<AbsDimension x="607" y="810" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="58" y="58" />
			</Size>
			<uri>[local.assets]btn_achievementRewards</uri>
		</iconButton>
