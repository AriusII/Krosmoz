<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition usePropertiesCache="false">
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
       	<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="smilies_uri" value="[config.content.path]gfx/smilies/" />
	</Constants>
	
	<Container name="mainCtr">
		<Anchors>
			<Anchor point="BOTTOMLEFT" relativeTo="chat.tchatCtr">
				<AbsDimension x="24" y="24" />
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="485" y="172" />
		</Size>		
		
		
		<Container name="ctr_smileys">
		
			<!-- Texture tx_background-->

			<Texture>
				<Anchors>
					<Anchor>
						<AbsDimension x="0" y="2" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="485" y="170" />
				</Size>
				<uri>[local.assets]smiley_tx_background</uri>
				<mouseEnabled>true</mouseEnabled>
				<autoGrid>true</autoGrid>
			</Texture>

			<!-- Grid gd_smileys -->

			<Grid name="gd_smileys">
				<Anchors>
					<Anchor>
						<AbsDimension x="25" y="15" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="447" y="140" />
				</Size>
				<rendererName>InlineXmlGridRender</rendererName>
				<rendererArgs>updateSmiley</rendererArgs>
				<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
				<slotWidth>32</slotWidth>
				<slotHeight>34</slotHeight>

				<Container name="smileyCtr">
					<Size>
						<AbsDimension x="32" y="34" />
					</Size>
					<Button name="btn_smiley">
						<Common>
							<radioMode>true</radioMode>
							<linkedTo>slot_smiley</linkedTo>
							<Texture name="tx_bgSmiley">
								<Size>
									<AbsDimension x="32" y="34" />
								</Size>
								<bgColor>[colors.grid.selected]</bgColor>
								<bgAlpha>0.7</bgAlpha>
								<visible>false</visible>
							</Texture>
							<Slot name="slot_smiley">
								<Size>
									<AbsDimension x="32" y="34" />
								</Size>
								<luminosity>1</luminosity>
							</Slot>
							<Hooks>
								<onItemRollOver />
								<onItemRollOut />
							</Hooks>
						</Common>
						<State type="OVER">
							<SetProperties target="tx_smiley">
								<luminosity>1.5</luminosity>
							</SetProperties>
						</State>
						<State type="SELECTED_OVER">
							<SetProperties target="tx_smiley">
								<luminosity>1.5</luminosity>
							</SetProperties>
						</State>
					</Button>

				</Container>

				<Hooks>
					<onSelectItem />
					<onItemRightClick />
					<onItemRollOver />
					<onItemRollOut />
				</Hooks>
			</Grid>

		</Container>

		<Container name="ctr_emotes">
		
			<!-- Texture tx_background-->

			<Texture>
				<Anchors>
					<Anchor>
						<AbsDimension x="0" y="32" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="485" y="140" />
				</Size>
				<uri>[local.assets]smiley_tx_background</uri>
				<mouseEnabled>true</mouseEnabled>
				<autoGrid>true</autoGrid>
			</Texture>
		
			<!-- Grid gd_emotes -->

			<Grid name="gd_emotes">
				<Anchors>
					<Anchor>
						<AbsDimension x="25" y="45" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="447" y="105" />
				</Size>
				<rendererName>InlineXmlGridRender</rendererName>
				<rendererArgs>updateEmote</rendererArgs>
				<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
				<slotWidth>32</slotWidth>
				<slotHeight>34</slotHeight>

				<Container name="emoteCtr">
					<Size>
						<AbsDimension x="32" y="34" />
					</Size>
					<Button name="btn_emote">
						<Common>
							<radioMode>true</radioMode>
							<linkedTo>slot_emote</linkedTo>
							<Slot name="slot_emote">
								<Size>
									<AbsDimension x="32" y="34" />
								</Size>
								<luminosity>1</luminosity>
								<timerTexture>[local.assets]timerSlot</timerTexture>
							</Slot>
							<Hooks>
								<onSelectItem />
							</Hooks>
							<cacheAsBitmap>true</cacheAsBitmap>
						</Common>
						<State type="OVER">
							<SetProperties target="tx_emote">
								<luminosity>1.5</luminosity>
							</SetProperties>
						</State>
					</Button>

				</Container>

				<Hooks>
					<onSelectItem />
					<onItemRollOver />
					<onItemRollOut />
				</Hooks>
			</Grid>
		</Container>
		
		
	</Container>
</Definition>