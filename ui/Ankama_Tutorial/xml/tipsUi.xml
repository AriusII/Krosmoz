   </Constants>

	<Container name="ctr_main">
		<Anchors>
			<Anchor>
				<AbsDimension x="0" y="445" />
			</Anchor>
		</Anchors>
		<visible>true</visible>
		
		<Container name="ctr_nocheat">
			<Anchors>
				<Anchor>
