			<bgColor>0xFF00FF</bgColor>
			<alpha>0</alpha>			
			<visible>false</visible>
		</Container>
		
		<Container name="ctr_visible">
			<visible>false</visible>
			
			<Container name="ctr_down">
				<Texture>
					<mouseEnabled>true</mouseEnabled>
					<uri>[local.assets]notification_tx_fondGris</uri>
