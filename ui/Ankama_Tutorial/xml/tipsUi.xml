				</Anchors>
			</Container>
			
			<Container name="mask_tips">
				<Size>
					<AbsDimension x="60" y="17" />
				</Size>
				<bgColor>0xFF00FF</bgColor>
			</Container>
		</Container>
		
		<Container name="ctr_effect">
			<iconButton name="btn_hide">
				<visible>false</visible>
				<uri>[local.assets]tips_btn_flecheGrand</uri>
				<Hooks>
					<onRelease />
				</Hooks>
			</iconButton>
			
			<iconButton name="btn_show">
				<visible>false</visible>
				<uri>[local.assets]tips_btn_flechePetit</uri>
