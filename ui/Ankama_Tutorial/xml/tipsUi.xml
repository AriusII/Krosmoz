				</Texture>
				
				<Label name="lbl_down">
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="-6" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="60" />
					</Size>
					<cssClass>center</cssClass>
					<css>[local.css]normal.css</css>
				</Label>
			</Container>
		
			<Texture name="tx_background">
				<Size>
					<AbsDimension x="66" />
				</Size>
				<uri>[local.assets]tips_background</uri>
				<autoGrid>true</autoGrid>
			</Texture>
			
			<Container name="ctr_text">
				<Anchors>
					<Anchor>
						<AbsDimension x="61" y="19" />
					</Anchor>
				</Anchors>
				<visible>false</visible>
				<mouseEnabled>true</mouseEnabled>
				
				<Texture>
					<Anchors>
						<Anchor>
							<AbsDimension x="-56" />
						</Anchor>
					</Anchors>
					<uri>[local.assets]tips_background2</uri>
				</Texture>
				
				<Texture name="tx_background_message">
					<Size>
						<AbsDimension x="320" y="10" />
					</Size>
					<uri>[local.assets]tips_background3</uri>
				</Texture>
				
				<Label name="lbl_title_message">
					<Anchors>
						<Anchor>
							<AbsDimension x="5" y="5" />
						</Anchor>
					</Anchors>
					<css>[local.css]titleSmall.css</css>
				</Label>
				
				<Label name="lbl_message">
					<Anchors>
						<Anchor>
							<AbsDimension x="5" y="35" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="300" />
					</Size>
					<multiline>true</multiline>
					<wordWrap>true</wordWrap>
					<cssClass>left</cssClass>
					<css>[local.css]normal.css</css>
					<useStyleSheet>true</useStyleSheet>
					<hyperlinkEnabled>true</hyperlinkEnabled>
				</Label>
				
				<iconButton name="btn_close">
					<Size>
						<AbsDimension x="27" y="27" />
					</Size>
					<Anchors>
						<Anchor>
							<AbsDimension x="304" y="15" />
						</Anchor>
					</Anchors>
					<uri>[local.assets]tips_close</uri>
					<Hooks>
						<onRelease />
					</Hooks>
				</iconButton>
			</Container>
			
			<Container name="ctr_tips">
				<Anchors>
					<Anchor>
						<AbsDimension x="7" y="22" />
