<?xml version="1.0" encoding="UTF-8"?>
<Definition>

	<Import url="[config.mod.template]button/simpleButton.xml" />
	<Import url="[config.mod.template.button]iconButton.xml" />
	
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
	   	<Constant name="css" value="[config.ui.skin]css/" />
	   	
		<Constant name="member_height" value="62" type="int" />
		<Constant name="bonus_height" value="60" type="int" />
	</Constants>
	
	<Container name="mainCtr" strata="TOP">
		<Anchors>
			<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
				<AbsDimension x="5" y="235" />
			</Anchor>
		</Anchors>
		
		
		<Button name="btn_minimize">
			<Common>
				<Size>
					<AbsDimension x="83" y="25" />
				</Size>
				<Anchors>
					<Anchor>
						<AbsDimension x="-3" y="-60" />
					</Anchor>
				</Anchors>
				
				<radioGroup>minMaxRadio</radioGroup>
				<radioMode>true</radioMode>
		
				<Texture name="txBoutonMinimize">
					<Size>
						<AbsDimension x="83" y="25" />
					</Size>
					<uri>[local.assets]Texture_tx_btn_minimize</uri>
				</Texture>
			</Common>
			<State type="OVER">
				<SetProperties target="txBoutonMinimize">
					<gotoAndStop>over</gotoAndStop>
				</SetProperties>
			</State>
			<State type="PRESSED">
				<SetProperties target="txBoutonMinimize">
					<gotoAndStop>pressed</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED">
				<SetProperties target="txBoutonMinimize">
					<gotoAndStop>selected</gotoAndStop>
				</SetProperties>
			</State>
		</Button>
		
		<Button name="btn_maximize">
			<Common>
				<Size>
					<AbsDimension x="23" y="25" />
				</Size>
				<Anchors>
					<Anchor>
						<AbsDimension x="57" y="-60" />
					</Anchor>
				</Anchors>
				
				<radioGroup>minMaxRadio</radioGroup>
				<radioMode>true</radioMode>
		
				<Texture name="txBoutonMaximize">
					<Size>
						<AbsDimension x="23" y="25" />
					</Size>
					<uri>[local.assets]Texture_tx_btn_maximize</uri>
					<autoGrid>true</autoGrid>
				</Texture>
				<Hooks>
					<onRelease />
				</Hooks>
			</Common>
			<State type="OVER">
				<SetProperties target="txBoutonMaximize">
					<gotoAndStop>over</gotoAndStop>
				</SetProperties>
			</State>
			<State type="PRESSED">
				<SetProperties target="txBoutonMaximize">
					<gotoAndStop>pressed</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED">
				<SetProperties target="txBoutonMaximize">
					<gotoAndStop>selected</gotoAndStop>
				</SetProperties>
			</State>
		</Button>
				
		<Texture name="tx_partyType">
			<Anchors>
				<Anchor>
					<AbsDimension x="10" y="-59" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="40" y="23" />
			</Size>
			<uri>[local.assets]Groupe_tx_types</uri>
			<autoGrid>true</autoGrid>
		</Texture>
		
		<iconButton name="btn_info">
			<Anchors>
				<Anchor>
					<AbsDimension x="5" y="-32" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="51" y="17" />
			</Size>
			<uri>[local.assets]Groupe_btn_InfosGroupe</uri>
		</iconButton>
		
		<!-- Button btn_switchParty-->
		
		<iconButton name="btn_switchParty">
			<Anchors>
				<Anchor>
					<AbsDimension x="5" y="-12" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="51" y="23" />
			</Size>
			<radioMode>true</radioMode>
			<uri>[local.assets]Groupe_btn_switchType</uri>
		</iconButton>
		
		<Grid name="gdParty">
			<Anchors>
				<Anchor>
					<AbsDimension x="0" y="13" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="80" y="497" />
			</Size>
			<slotWidth>60</slotWidth>
			<slotHeight>61</slotHeight>
			<rendererName>XmlUiGridRenderer</rendererName>
			<rendererArgs>partyMemberItem</rendererArgs>
			<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
			<Hooks>
				<onSelectItem />
				<onRollOut />
			</Hooks>
		</Grid>
		
		<Texture name="tx_background_grid" strata="LOW">
			<Anchors>
				<Anchor>
					<AbsDimension x="0" y="-40" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="80" y="605" />
			</Size>
			<uri>[local.assets]Groupe_tx_background</uri>
			<autoGrid>true</autoGrid>
		</Texture>
		
	</Container>
</Definition>
