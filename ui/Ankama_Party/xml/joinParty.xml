<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	<Import url="[config.mod.template]button/simpleButtonNoAnchor.xml" />
	<Import url="[config.mod.template.button]iconButton.xml" />
	
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
	   	<Constant name="css" value="[config.ui.skin]css/" />
	</Constants>
	
	<Container name="ctr_main">
    	<Anchors>
    		<Anchor point="CENTER" relativePoint="CENTER">
    			<AbsDimension x="0" y="-20" />
    		</Anchor>
    	</Anchors>
		
		<mouseEnabled>true</mouseEnabled>
		
		<Texture name="tx_background">
			<Size>
				<AbsDimension x="1020" y="460" />
			</Size>
			<autoGrid>true</autoGrid>
			<uri>[local.assets]tx_generalBackgroundWithTitle</uri>
			<shadowColor>[colors.ui.shadow]</shadowColor>
		</Texture>
		
		<!-- Label lbl_title-->
		<Label name="lbl_fromName">
			<Anchors>
				<Anchor>
					<AbsDimension x="15" y="15" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="1000" y="27" />
			</Size>
			<css>[local.css]title.css</css>
		</Label>
		
		<Texture name="tx_blockBackground">
			<Anchors>
				<Anchor>
					<AbsDimension x="25" y="110" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="970" y="277" />
			</Size>
			<uri>[local.assets]tx_blockBackground</uri> 
			<autoGrid>true</autoGrid>
		</Texture>
		
		<Grid name="grid_members">
			<Size>
				<AbsDimension x="980" y="230" />
			</Size>
			
			<Anchors>
				<Anchor>
					<AbsDimension x="20" y="80" />
				</Anchor>
			</Anchors>
					
			<autoSelectMode>0</autoSelectMode>
			<scrollDisplay>none</scrollDisplay>
			<rendererName>InlineXmlGridRender</rendererName>
			<rendererArgs>updateEntry</rendererArgs>
			<slotWidth>140</slotWidth>
			<slotHeight>210</slotHeight>
	
			<Container name="ctr_player">
				<Size>
					<AbsDimension x="140" y="210" />
				</Size>
				
				<mouseEnabled>true</mouseEnabled>
                
                <Texture name="tx_slotPlayer">
                	<Anchors>
						<Anchor>
							<AbsDimension x="10" y="55" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="120" y="170" />
					</Size>
					<uri>[local.assets]tx_darkBg</uri>
				</Texture>
				
				<Texture name="tx_slotPlayerLine">
                	<Anchors>
						<Anchor>
							<AbsDimension x="10" y="55" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="120" y="170" />
					</Size>
					<uri>[local.assets]craft_tx_OrangeLine</uri>
				</Texture>
                
				<EntityDisplayer name="ed_Player">
					<Anchors>
						<Anchor>
							<AbsDimension x="-40" y="10" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="215" y="210" />
					</Size>
				</EntityDisplayer>
				
				<Label name="lbl_name">
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="230" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="135" y="20" />
					</Size>
					<hyperlinkEnabled>true</hyperlinkEnabled>
					<useStyleSheet>true</useStyleSheet>
					<css>[local.css]normal.css</css>
					<cssClass>center</cssClass>
				</Label>
				
				<Label name="lbl_breed">
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="255" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="135" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<cssClass>center</cssClass>
				</Label>
				
				<Label name="lbl_level">
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="275" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="135" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<cssClass>center</cssClass>
				</Label>
				
				<Texture name="tx_leaderCrown" strata="TOP">
					<Anchors>
						<Anchor>
							<AbsDimension x="27" y="188" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="85" y="40" />
					</Size>
					<autoGrid>false</autoGrid>
					<uri>[local.assets]Texture_tx_LeaderCrown</uri>
				</Texture>
			</Container>
			<Hooks>
				<onItemRollOver />
				<onItemRollOut />
			</Hooks>
		</Grid>
		
		<!-- Label lbl_title-->
		<Label name="lbl_dungeon">
			<Anchors>
				<Anchor>
					<AbsDimension x="20" y="60" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="1000" y="27" />
			</Size>
			<css>[local.css]normal.css</css>
		</Label>
		
<!-- Liste des boutons -->
		<iconButton name="btnClose">
			<Anchors>
				<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
					<AbsDimension x="1" y="-2" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="57" y="36" />
			</Size>
			<uri>[local.assets]btn_cornerCross</uri>
		</iconButton>
		
		<!-- Bouton "valider" -->
		<simpleButtonNoAnchor label="[ui.common.accept]" name="btnValidate">
			<Size>
				<AbsDimension x="150" y="32" />
			</Size>
		</simpleButtonNoAnchor>
		
		<!-- Bouton "annuler" -->
		<simpleButtonNoAnchor label="[ui.common.refuse]" name="btnCancel">
			<Size>
				<AbsDimension x="150" y="32" />
			</Size>
		</simpleButtonNoAnchor>
		
		<simpleButtonNoAnchor label="[ui.social.blackListTemporarly]" name="btnIgnore">
			<Size>
				<AbsDimension x="300" y="32" />
			</Size>
		</simpleButtonNoAnchor>
<!-- fin liste boutons -->
		
	</Container>

</Definition>