<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	<Constants>		
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="bitmap" value="[config.ui.skin]bitmap/" />	
		
		<Constant name="death_uri" value="[local.assets]fightResult_tx_death_picto" />
		<Constant name="plus_uri" value="[local.assets]btn_plus_square" />
		
		<Constant name="lbl_xp_short_x" value="400" type="int"/>
		<Constant name="lbl_xp_short_y" value="4" type="int"/>
		<Constant name="lbl_xp_short_width" value="160" type="int"/>
		
		<Constant name="lbl_xp_long_x" value="335" type="int"/>
		<Constant name="lbl_xp_long_y" value="4" type="int"/>
		<Constant name="lbl_xp_long_width" value="220" type="int"/>
	</Constants>
	
	<Container name="fighterPvmItemCtr">

		<StateContainer name="btn_fighterPvm">
			<Common>
				<Size>
					<AbsDimension x="1116" y="33" />
				</Size>

				<!-- Texture tx_deathPicto-->

				<Texture name="tx_deathPicto">
					<Anchors>
						<Anchor>
							<AbsDimension x="9" y="7" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="30" y="21" />
					</Size>
				</Texture>

				<!-- Label lbl_name-->

				<Label name="lbl_name">
					<Anchors>
						<Anchor>
							<AbsDimension x="45" y="4" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="222" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<hyperlinkEnabled>true</hyperlinkEnabled>
					<useStyleSheet>true</useStyleSheet>
				</Label>

				<!-- Label lbl_level-->

				<Label name="lbl_level">
					<Anchors>
						<Anchor>
							<AbsDimension x="277" y="4" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="54" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
				</Label>

				<!-- Texture tx_xpGauge-->

				<Texture name="tx_xpGauge">
					<Anchors>
						<Anchor>
							<AbsDimension x="338" y="11" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="59" y="12" />
					</Size>
					<uri>[local.assets]fightResult_tx_XPjauge</uri>
				</Texture>

				<!-- Label lbl_XPperso-->

				<Label name="lbl_xpPerso">
					<Size>
						<AbsDimension x="145" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<cssClass>right</cssClass>
				</Label>
				
				<!-- Texture tx_xpBonusPicto-->

				<Texture name="tx_xpBonusPicto">
					<Anchors>
						<Anchor>
							<AbsDimension x="608" y="2" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="28" y="28" />
					</Size>
					<uri>[local.assets]tx_XPBonus</uri>
				</Texture>

				<!-- Label lbl_honour-->

				<Label name="lbl_honour">
					<Anchors>
						<Anchor>
							<AbsDimension x="571" y="4" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="74" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<cssClass>center</cssClass>
				</Label>


				<!-- Label lbl_kamas-->

				<Label name="lbl_kamas">
					<Anchors>
						<Anchor>
							<AbsDimension x="658" y="4" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="100" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<cssClass>center</cssClass>
				</Label>

				<!-- Grid gd_objects-->

				<Grid name="gd_objects" strata="HIGH">
					<Anchors>
						<Anchor>
							<AbsDimension x="775" y="1" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="299" y="30" />
					</Size>
					<rendererName>SlotGridRenderer</rendererName>
					<rendererArgs>,[local.bitmap]over.png,,,[local.bitmap]refuseDrop.png,,[local.css]normal.css</rendererArgs>
					<scrollDisplay>none</scrollDisplay>
					<vertical>false</vertical>
					<slotWidth>30</slotWidth>
					<slotHeight>30</slotHeight>
					<autoSelect>false</autoSelect>
				</Grid>

				<!-- Button btn_seeMore-->

				<Button name="btn_seeMore" strata="TOP">
					<Common>
						<Anchors>
							<Anchor>
								<AbsDimension x="1090" y="8" />
							</Anchor>
						</Anchors>

						<!-- Texture btn_seeMore_tx-->

						<Texture name="btn_seeMore_tx">
							<Size>
								<AbsDimension x="17" y="17" />
							</Size>
						</Texture>
					</Common>
					<State type="OVER">
						<SetProperties target="btn_seeMore_tx">
							<gotoAndStop>over</gotoAndStop>
						</SetProperties>
					</State>
				</Button>
				
				
			</Common>
			<State type="SELECTED">
				<SetProperties target="btn_fighterPvm">
					<bgColor>[colors.grid.selected]</bgColor>
				</SetProperties>
			</State>
		</StateContainer>
		
	</Container>
</Definition>

