<?xml version="1.0" encoding="UTF-8"?>
<Definition modal="true">
   <Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
       <Constant name="css" value="[config.ui.skin]css/" />
   </Constants>

    <Import url="[config.mod.template.button]simpleButton.xml" />
    <Import url="[config.mod.template.button]iconButton.xml" />

	<Container name="mainCtr">
		
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" />
		</Anchors>
		
		<Texture>
			<Size>
				<AbsDimension x="454" y="228" />
			</Size>
			<uri>[local.assets]tx_generalBackgroundWithTitle</uri>
			<autoGrid>true</autoGrid>
		</Texture>

		<Texture>
			<Anchors>
				<Anchor>
					<AbsDimension x="111" y="130" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="235" y="26" />
			</Size>
			<uri>[local.assets]tx_inputBackground</uri>
			<autoGrid>true</autoGrid>
		</Texture>

		<Container>
			<Anchors>
				<Anchor point="CENTER" relativePoint="CENTER">
					<AbsDimension x="0" y="75" />
				</Anchor>
			</Anchors>
			
			<!-- simpleButton btnDefault-->

			<simpleButton name="btnDefault">
				<Size>
					<AbsDimension x="134" y="30" />
				</Size>
				<label>[ui.common.default]</label>
				<cssClass>boldcenter</cssClass>
				<css>[local.css]button.css</css>
			</simpleButton>

			<!-- simpleButton btnCancel-->

			<simpleButton name="btnCancel">
				<Anchors>
					<Anchor>
						<AbsDimension x="139" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="134" y="30" />
				</Size>
				<label>[ui.common.cancel]</label>
				<cssClass>boldcenter</cssClass>
				<css>[local.css]button.css</css>
			</simpleButton>

			<!-- simpleButton btnOk-->

			<simpleButton name="btnOk">
				<Anchors>
					<Anchor>
						<AbsDimension x="278" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="134" y="30" />
				</Size>
				<label>[ui.common.ok]</label>
				<cssClass>boldcenter</cssClass>
				<css>[local.css]button.css</css>
			</simpleButton>
			
		</Container>

		<!-- Label lblTitle-->

		<Label name="lblTitle">
			<Anchors>
				<Anchor>
					<AbsDimension x="29" y="15" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="406" y="35" />
			</Size>
			<text>[ui.common.personalizedShorcut]</text>
			<css>[local.css]title.css</css>
		</Label>

		<!-- Label lblDescription-->

		<Label name="lblDescription">
			<Anchors>
				<Anchor>
					<AbsDimension x="41" y="73" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="367" y="41" />
			</Size>
			<text>[ui.common.shortcutsCustomHelp]</text>
			<cssClass>center</cssClass>
			<css>[local.css]normal.css</css>
		</Label>
		
		<!-- Label lblError-->
		<Label name="lblError">
			<Anchors>
				<Anchor>
					<AbsDimension x="41" y="98" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="367" y="41" />
			</Size>
			<text>[ui.common.shortcutsCustomError]</text>
			<css>[local.css]normal.css</css>
			<cssClass>redcenter</cssClass>
			<visible>false</visible>
		</Label>

		<!-- Label lblShortcut-->

		<Label name="lblShortcut">
			<Anchors>
				<Anchor>
					<AbsDimension x="111" y="130" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="235" y="26" />
			</Size>
			<text>...</text>
			<cssClass>center</cssClass>
			<css>[local.css]normal.css</css>
		</Label>

		<!-- iconButton btnDelete-->

		<iconButton name="btnDelete">
			<Anchors>
				<Anchor>
					<AbsDimension x="352" y="132" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="23" y="23" />
			</Size>
			<uri>[local.assets]btn_cross_square</uri>
			<autoGrid>true</autoGrid>
		</iconButton>
	</Container>
</Definition>
