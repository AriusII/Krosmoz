			<Size>
				<AbsDimension x="480" y="20" />
			</Size>
			<text>[ui.alert.windowsMax]</text>
			<css>[local.css]normal.css</css>
		</Label>
		
		<Label name="lbl_displayDuration">
			<Anchors>
				<Anchor relativeTo="tx_bgForeground1">
					<AbsDimension x="20" y="100" />
