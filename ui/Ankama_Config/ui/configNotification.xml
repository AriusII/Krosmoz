		</ComboBox>	
		
		
        <Grid name="gd_notifications">
            <Anchors>
                <Anchor relativeTo="tx_bgForeground2">
                    <AbsDimension x="20" y="25" />
                </Anchor>
            </Anchors>
            <Size>
                <AbsDimension x="740" y="350" />
            </Size>
            <slotWidth>720</slotWidth>
            <slotHeight>35</slotHeight>
            <scrollDisplay>always</scrollDisplay>
            <rendererName>InlineXmlGridRender</rendererName>
            <rendererArgs>updateNotificationLine,[colors.grid.line],[colors.grid.bg]</rendererArgs>
            <verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>

            <Container>
                <Size>
                    <AbsDimension x="720" y="35" />
                </Size>

                <labelCheckBox name="btn_activate">
                    <Anchors>
                        <Anchor>
                            <AbsDimension x="5" y="4" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="16" y="16" />
                    </Size>
                    <labelHeight>30</labelHeight>
                    <labelWidth>500</labelWidth>
                    <labelPosX>20</labelPosX>
                    <css>[local.css]normal.css</css>
                </labelCheckBox>

				<iconButton name="btn_sound">
					<Anchors>
						<Anchor>
							<AbsDimension x="595" y="5" />
						</Anchor>
					</Anchors>
					<uri>[local.assets]btn_music</uri>
					<Size>
						<AbsDimension x="25" y="25" />
					</Size>
					<Hooks>
						<onRollOver />
						<onRollOut />
					</Hooks>
				</iconButton>
				
				<iconButton name="btn_notify">
					<Anchors>
						<Anchor>
							<AbsDimension x="640" y="5" />
						</Anchor>
					</Anchors>
					<uri>[local.assets]btn_notify</uri>
					<Size>
						<AbsDimension x="25" y="25" />
					</Size>
					<Hooks>
						<onRollOver />
						<onRollOut />
					</Hooks>
				</iconButton>
				
				<iconButton name="btn_multi">
					<Anchors>
						<Anchor>
							<AbsDimension x="685" y="5" />
						</Anchor>
					</Anchors>
					<uri>[local.assets]btn_multiaccount</uri>
					<Size>
						<AbsDimension x="25" y="25" />
					</Size>
					<Hooks>
						<onRollOver />
						<onRollOut />
					</Hooks>
				</iconButton>
				
            </Container>
