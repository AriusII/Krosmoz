			</Anchors>
			<Size>
				<AbsDimension x="480" y="20" />
			</Size>
			<text>[ui.alert.timeBeforeWindowsDisappearance]</text>
			<css>[local.css]normal.css</css>
		</Label>
		
		<Label name="lbl_notifPosition">
			<Anchors>
				<Anchor relativeTo="tx_bgForeground1">
					<AbsDimension x="20" y="127" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="360" y="20" />
			</Size>
			<text>[ui.alert.windowsPosition]</text>
			<css>[local.css]normal.css</css>
		</Label>
				
		<!-- Container useless mais un peu qd mm, sert ? placer les checkbox -->

		<Container>
			<Anchors>
				<Anchor relativeTo="tx_bgForeground1">
					<AbsDimension x="20" y="145" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="20" y="10" />
			</Size>
		</Container>
		
		<configCheckbox name="btn_alphaWindows" text="[ui.alert.seethroughWindows]" uri="[local.assets]tx_light_checkbox"/>
		
				

		<ComboBox name="cb_notifPosition">
			<Anchors>
				<Anchor relativeTo="tx_bgForeground1">
					<AbsDimension x="410" y="127" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="340" y="25" />
			</Size>
			<autoSelectMode>0</autoSelectMode>
			<buttonTexture>[local.assets]btn_combobox</buttonTexture>
			<listTexture>[local.assets]tx_combobox</listTexture>
			<rendererArgs>[local.css]normal.css,,,[colors.grid.over],[colors.grid.selected]</rendererArgs>
			<scrollBarCss>[local.css]scrollBar.css</scrollBarCss>
			<Hooks>
				<onSelectItem />
