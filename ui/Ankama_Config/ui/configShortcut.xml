<?xml version="1.0" encoding="UTF-8"?>
<Definition>
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
	</Constants>

	<Import url="[config.mod.template.button]simpleButton.xml" />
	<Import url="[config.mod.template.button]iconButton.xml" />
    <Import url="[config.mod.template.button]labelCheckBox.xml" />

	<Container name="mainCtr">

		<Texture name="tx_bgForeground">
			<Anchors>
				<Anchor>
					<AbsDimension x="0" y="0" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="780" y="480" />
			</Size>
			<autoGrid>true</autoGrid>
			<uri>[local.assets]tx_darkBg</uri>
		</Texture>

		<Label name="lbl_keyboard">
			<Anchors>
				<Anchor>
					<AbsDimension x="20" y="10" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="320" y="20" />
			</Size>
			<text>[ui.option.keyboard]</text>
			<css>[local.css]titleSmall.css</css>
		</Label>

		<ComboBox name="cbKeyboard" strata="TOP">
			<Anchors>
				<Anchor>
					<AbsDimension x="360" y="10" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="400" y="25" />
			</Size>
			<autoSelectMode>0</autoSelectMode>
			<buttonTexture>[local.assets]btn_combobox</buttonTexture>
			<listTexture>[local.assets]tx_combobox</listTexture>
			<rendererArgs>[local.css]normal.css,,,[colors.grid.over],[colors.grid.selected]</rendererArgs>;
			<scrollBarCss>[local.css]scrollBar.css</scrollBarCss>
		</ComboBox>
		

		<!--Grid name="grid">
			<Anchors>
				<Anchor>
					<AbsDimension x="20" y="45" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="740" y="385" />
			</Size>
			<slotWidth>720</slotWidth>
			<slotHeight>35</slotHeight>
			<scrollDisplay>always</scrollDisplay>
			<rendererName>XmlUiGridRenderer</rendererName>
			<rendererArgs>configShortcutItem,[colors.grid.line],[colors.grid.bg]
			</rendererArgs>
			<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
		</Grid-->

        <Grid name="grid">
            <Anchors>
                <Anchor>
                    <AbsDimension x="20" y="45" />
                </Anchor>
            </Anchors>
            <Size>
                <AbsDimension x="740" y="385" /> <!-- 420 -->
            </Size>
            <slotWidth>720</slotWidth>
            <slotHeight>35</slotHeight>
            <scrollDisplay>always</scrollDisplay>
            <rendererName>InlineXmlGridRender</rendererName>
            <rendererArgs>updateConfigLine,[colors.grid.line],[colors.grid.bg]</rendererArgs>
            <verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
            <Hooks>
                <onSelectItem />
            </Hooks>

            <Container name="shortcutLine">
                <Size>
                    <AbsDimension x="720" y="35" />
                </Size>

                <!-- Label lblDescription-->

                <Label name="lblDescription">
                    <Anchors>
                        <Anchor>
                            <AbsDimension x="10" y="4" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="430" y="22" />
                    </Size>
                    <css>[local.css]normal.css</css>
                </Label>

                <!-- Checkbox pour desactiver tous les shortcuts d'un catÃ©gorie -->
                <labelCheckBox name="btn_deactivateShortcuts">
                    <Anchors>
                        <Anchor>
                            <AbsDimension x="480" y="4" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="12" y="12" />
                    </Size>
                    <labelHeight>30</labelHeight>
                    <labelPosX>16</labelPosX>
                    <text>[ui.option.activeShortcuts]</text>
                    <css>[local.css]normal.css</css>
                    <cssClass>opposite</cssClass>
                </labelCheckBox>

                <!-- simpleButton btnAssoc-->

                <simpleButton name="btnAssoc">
                    <Anchors>
                        <Anchor>
                            <AbsDimension x="460" y="2" />
                        </Anchor>
                    </Anchors>

                    <Size>
                        <AbsDimension x="250" y="31" />
                    </Size>
                    <css>[local.css]normal.css</css>
                    <cssClass>darkcenter</cssClass>
                </simpleButton>
            </Container>
        </Grid>
		
		<iconButton name="btn_clearShortcuts">
			<Anchors>
				<Anchor relativeTo="grid">
					<AbsDimension x="0" y="400" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="18" y="18" />
			</Size>
			<uri>[local.assets]btn_reset</uri>
		</iconButton>
		<Label name="lbl_resetColors">
			<Anchors>
				<Anchor relativeTo="grid">
					<AbsDimension x="25" y="395" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="300" y="20" />
			</Size>
			<css>[local.css]normal.css</css>
			<text>[ui.option.clearShortcuts]</text>
		</Label>

	</Container>
</Definition>

