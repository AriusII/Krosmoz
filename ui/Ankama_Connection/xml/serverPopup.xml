<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition modal="true">
	<Import url="[config.mod.template.button]simpleButton.xml" />
	<Import url="[config.mod.template.button]iconButton.xml" />
	
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
	</Constants>
	
	<Container>
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER">
				<AbsDimension x="0" y="40" />
			</Anchor>
		</Anchors>
		
		<Texture name="tx_bg">
			<Size>
				<AbsDimension x="575" y="509" />
			</Size>
			<uri>[local.assets]tx_generalBackgroundWithTitle</uri>
			<autoGrid>true</autoGrid>
			<mouseEnabled>true</mouseEnabled>
		</Texture>

		<!-- simpleButton btnOk-->

		<simpleButton name="btn_ok">
			<Anchors>
				<Anchor relativePoint="BOTTOM" point="BOTTOM" relativeTo="tx_bg">
					<AbsDimension x="-90" y="-18" />
				</Anchor>
			</Anchors>			
			<Size>
				<AbsDimension x="162" y="30" />
			</Size>
			<label>[ui.common.ok]</label>
		</simpleButton>

		<!-- simpleButton btnundo-->

		<simpleButton name="btn_undo">
			<Anchors>
				<Anchor relativePoint="BOTTOM" point="BOTTOM" relativeTo="tx_bg">
					<AbsDimension x="90" y="-18" />
				</Anchor>
			</Anchors>			
			<Size>
				<AbsDimension x="162" y="30" />
			</Size>
			<label>[ui.common.cancel]</label>
		</simpleButton>

		<!-- Label lblTitle -->

		<Label>
			<Anchors>
				<Anchor>
					<AbsDimension x="25" y="15" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="500" y="35" />
			</Size>
			<text>[ui.sersel.suggestedServer]</text>
			<css>[local.css]title.css</css>
			<cssClass>center</cssClass>
		</Label>


		<Container name="ctr_content">
			<Anchors>
				<Anchor>
					<AbsDimension x="25" y="70" />
				</Anchor>
			</Anchors>
		
		</Container>

		
		
		<!-- BOUTON DE FERMETURE ->
		
		<iconButton name="btn_close">
			<Anchors>
				<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" />
			</Anchors>
			<Size>
				<AbsDimension x="57" y="36" />
			</Size>
			<uri>[local.assets]btn_cornerCross</uri>
        </iconButton-->

		
	</Container>
</Definition>
