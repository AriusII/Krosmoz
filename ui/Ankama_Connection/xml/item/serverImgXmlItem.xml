<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		
		<Constant name="status_0" value="[ui.server.state.unknown]" />
		<Constant name="status_1" value="[ui.server.state.offline]" />
		<Constant name="status_2" value="[ui.server.state.starting]" />
		<Constant name="status_3" value="[ui.server.state.online]" />
		<Constant name="status_4" value="[ui.server.state.nojoin]" />
		<Constant name="status_5" value="[ui.server.state.saving]" />
		<Constant name="status_6" value="[ui.server.state.stoping]" />
		<Constant name="status_7" value="[ui.server.state.full]" />	

		<Constant name="illus_uri" value="[config.content.path]gfx/illus/" />	
	</Constants>
	
	<Container>

		<Button name="btn_server">
			<Common>
				<Size>
					<AbsDimension x="186" y="424" /> 
				</Size>
				<radioMode>true</radioMode>

				<Texture>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="30" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="186" y="394" />
					</Size>
					<uri>[local.assets]tx_serverEmptySlot</uri>
				</Texture>
				
				<Container name="ctr_server">

					<Texture>
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="30" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="186" y="394" />
						</Size>
						<uri>[local.assets]tx_darkBg</uri>
						<autoGrid>true</autoGrid>
					</Texture>

					<!-- Texture tx_illu-->

					<Texture name="tx_illu">
						<Anchors>
							<Anchor>
								<AbsDimension x="7" y="37" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="171" y="236" />
						</Size>
					</Texture>
					

					<!-- Label lbl_name-->

					<Label name="lbl_name">
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="0" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="184" y="25" />
						</Size>
						<css>[local.css]titleSmall.css</css>
						<cssClass>darkcenterbig</cssClass>
					</Label>
					

					<!-- Texture tx_nbCharacters-->

					<Texture name="tx_nbCharacters">
						<Anchors>
							<Anchor>
								<AbsDimension x="1" y="274" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="182" y="38" />
						</Size>
						<uri>[local.assets]tx_serverchoice_characterNumber</uri>
					</Texture>

					<!-- Label lbl_nbCharacters-->

					<Label name="lbl_nbCharacters">
						<Anchors>
							<Anchor>
								<AbsDimension x="78" y="283" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="61" y="20" />
						</Size>
						<css>[local.css]normal.css</css>
					</Label>
					

					<!-- Texture tx_type -->

					<Texture name="tx_type">
						<Anchors>
							<Anchor>
								<AbsDimension x="55" y="318" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="77" y="42" />
						</Size>
					</Texture>

					<!-- Label lbl_status-->

					<Label name="lbl_status">
						<Anchors>
							<Anchor>
								<AbsDimension x="40" y="370" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="132" y="45" />
						</Size>
						<css>[local.css]normal.css</css>
						<cssClass>right</cssClass>
						<multiline>true</multiline>
						<wordWrap>true</wordWrap>
						<verticalAlign>center</verticalAlign>
					</Label>
					
					
					
					<!-- Texture pour les rollover/selection -->

					<Texture name="tx_selected">
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="30" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="186" y="394" />
						</Size>
						<uri>[local.assets]craft_tx_OrangeLine</uri>
						<autoGrid>true</autoGrid>
						<visible>false</visible>
					</Texture>
					
				</Container>
				
			</Common>
			<State type="OVER">
				<SetProperties target="tx_selected">
					<visible>true</visible>
				</SetProperties>
			</State>
			<State type="SELECTED">
				<SetProperties target="tx_selected">
					<visible>true</visible>
				</SetProperties>
			</State>
			<State type="SELECTED_OVER">
				<SetProperties target="tx_selected">
					<visible>true</visible>
				</SetProperties>
			</State>
		</Button>
					

		<!-- Texture tx_status-->

		<Texture name="tx_status">
			<Anchors>
				<Anchor>
					<AbsDimension x="1" y="379" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="50" y="30" />
			</Size>
		</Texture>
		
	</Container>
</Definition>

