<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition modal="true">
	
	<Import url="[config.mod.template]button/simpleButton.xml" />
	
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
	</Constants>

				
	<Container name="ctr_secret">
		<Size>
			<RelDimension x="1" y="1" />
		</Size>
		<bgColor>0x000000</bgColor>
		<bgAlpha>0.3</bgAlpha>

		<Container>
			<Anchors>
				<Anchor relativePoint="CENTER" point="CENTER" />
			</Anchors>

			<!-- Texture tx_infoBackground-->

			<Texture name="tx_infoBackground">
				<Size>
					<AbsDimension x="548" y="276" />
				</Size>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]tx_generalBackgroundWithTitle</uri>
			</Texture>

			<!-- Texture tx_bg2-->

			<Texture name="tx_bg2">
				<Anchors>
					<Anchor>
						<AbsDimension x="21" y="68" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="506" y="189" />
				</Size>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]tx_blockBackground</uri>
			</Texture>

			<!-- Texture tx_infoButtonBackground -->

			<Texture name="tx_infoButtonBackground">
				<Anchors>
					<Anchor relativeTo="tx_infoBackground" relativePoint="BOTTOM" point="BOTTOM">
						<AbsDimension x="0" y="38" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="371" y="47" />
				</Size>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]tx_buttonBackground</uri>
			</Texture>

			<Label>
				<Anchors>
					<Anchor relativeTo="tx_infoBackground" relativePoint="TOP" point="TOP">
						<AbsDimension x="0" y="20" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="460" y="25" />
				</Size>
				<css>[local.css]title.css</css>
				<cssClass>center</cssClass>
				<text>[ui.popup.delete]</text>
			</Label>

			<TextArea>
				<Anchors>
					<Anchor relativeTo="tx_infoBackground" relativePoint="TOP" point="TOP">>
						<AbsDimension x="0" y="80" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="480" y="50" />
				</Size>
				<multiline>true</multiline>
				<wordWrap>true</wordWrap>
				<cssClass>center</cssClass>
				<css>[local.css]normal.css</css>
				<text>[ui.charSel.secretQuestion]</text>
			</TextArea>

			<!-- Label lbl_secretQuestion-->

			<TextArea name="lbl_secretQuestion">
				<Anchors>
					<Anchor relativeTo="tx_infoBackground" relativePoint="TOP" point="TOP">>
						<AbsDimension x="0" y="145" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="480" y="70" />
				</Size>
				<cssClass>center</cssClass>
				<css>[local.css]normal.css</css>
				<multiline>true</multiline>
				<wordWrap>true</wordWrap>
			</TextArea>

			<Texture>
				<Anchors>
					<Anchor>
						<AbsDimension x="70" y="226" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="409" y="25" />
				</Size>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]tx_inputBackgroundDark</uri>
			</Texture>

			<Input name="inp_answer">
				<Anchors>
					<Anchor>
						<AbsDimension x="80" y="226" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="389" y="21" />
				</Size>
				<cssClass>center</cssClass>
				<css>[local.css]normal.css</css>
			</Input>

			<!-- Button btn_infoClose-->

			<simpleButton label="[ui.common.ok]" name="btn_secretOk"   >
			<Size>
				<AbsDimension x="120" y="31" />
			</Size>
				<Anchors>
					<Anchor>
						<AbsDimension x="145" y="277" />
					</Anchor>
				</Anchors>
				<css>[local.css]button.css</css>
				<Hooks>
					<onRelease />
				</Hooks>
			</simpleButton>		

			<!-- Button btn_infoClose-->

			<simpleButton label="[ui.common.cancel]" name="btn_secretClose"   >
			<Size>
				<AbsDimension x="120" y="31" />
			</Size>
				<Anchors>
					<Anchor>
						<AbsDimension x="281" y="277" />
					</Anchor>
				</Anchors>
				<css>[local.css]button.css</css>
				<Hooks>
					<onRelease />
				</Hooks>
			</simpleButton>	
		</Container>
	</Container>

	
	<Shortcuts>
		<validUi />
		<closeUi />
		<rightArrow />
		<leftArrow />
	</Shortcuts>
</Definition>