				</Anchors>
				<Size>
					<AbsDimension x="25" y="25" />
				</Size>
				<uri>[local.assets]btn_Interrogation_square</uri>
				<Hooks>
					<onRollOver />
					<onRollOut />
				</Hooks>
			</iconButton>
		</Container>

		<Container name="ctr_filter">
			<visible>false</visible>
			<labelCheckBox name="btn_filter">
				<Anchors>
