				</Anchors>
				<Size>
					<AbsDimension x="30" y="30" />
				</Size>
				<radioGroup>filterStock</radioGroup>
				<radioMode>true</radioMode>
				<uri>[local.assets]btn_resources</uri>
			</iconButton>
        </Container>
        
        
        
        <Container name="ctr_content">
			<Size>
				<AbsDimension x="403" y="611" />
			</Size>

			<Container name="searchCtr">
				<visible>false</visible>
				<Anchors> 
					<Anchor>
						<AbsDimension x="31" y="104" />
					</Anchor>
				</Anchors>
				<Texture>
					<Size>
						<AbsDimension x="361" y="25" />
					</Size>
					<autoGrid>true</autoGrid>
					<uri>[local.assets]tx_inputBackground</uri>
				</Texture>

				<Input name="searchInput">
					<Anchors> 
						<Anchor>
							<AbsDimension x="3" y="0" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="355" y="21" />
					</Size>
					<css>[local.css]normal.css</css>
				</Input>
			</Container>

			 <iconButton name="btnSearch">
				<Anchors> 
					<Anchor>
						<AbsDimension x="395" y="104" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="25" y="25" />
				</Size>
				<checkBox>true</checkBox>
				<uri>[local.assets]btn_recherche</uri>
				<checkBox>true</checkBox>
			</iconButton>

			<Texture name="tx_shop">
				<Anchors>
					<Anchor>
						<AbsDimension x="21" y="136" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="399" y="578" />
				</Size>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]tx_blockBackground</uri>
			</Texture>

			<!-- La grille du mode marchand du personnage (celle de gauche) -->

			<Grid name="gd_shop">
				<Anchors>
					<Anchor>
						<AbsDimension x="21" y="153" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="391" y="545" />
				</Size>
				<autoSelectMode>0</autoSelectMode>
				<slotWidth>367</slotWidth>
				<slotHeight>49</slotHeight>
				<rendererName>InlineXmlGridRender</rendererName>
				<rendererArgs>updateItemLine,[colors.grid.line]</rendererArgs>
				<scrollDisplay>always</scrollDisplay>
				<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
				<Hooks>
					<onSelectItem />
				</Hooks>


				<Button name="btn_item">
					<Common>
						<Size>
							<AbsDimension x="367" y="49" />
						</Size>
						<mouseEnabled>true</mouseEnabled>
						<mouseChildren>true</mouseChildren>

						<Texture>
							<Size>
								<AbsDimension x="367" y="49" />
							</Size>
							<bgColor>0</bgColor>
							<bgAlpha>0</bgAlpha>
						</Texture>

						<!-- Label lbl_ItemName-->

						<Label name="lbl_ItemName">
							<Anchors>
								<Anchor>
									<AbsDimension x="51" y="10" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="193" y="20" />
							</Size>
							<css>[local.css]normal.css</css>
							<useStyleSheet>true</useStyleSheet>
						</Label>

						<!-- Label lbl_ItemPrice-->

						<Label name="lbl_ItemPrice">
							<Anchors>
								<Anchor>
									<AbsDimension x="242" y="10" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="120" y="20" />
							</Size>
							<css>[local.css]normal.css</css>
							<cssClass>right</cssClass>
						</Label>
						
						<Slot name="slot_TokenPrice">
							<Anchors>
								<Anchor>
									<AbsDimension x="318" y="3" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="44" y="44" />
							</Size>
							<css>[local.css]normal.css</css>
							<displayBackgroundIcon>false</displayBackgroundIcon>
						</Slot>	

						<!-- Texture tx_backgroundItem-->

						<Texture name="tx_backgroundItem">
							<Anchors>
								<Anchor>
									<AbsDimension x="6" y="3" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="44" y="44" />
							</Size>
							<uri>[local.assets]tx_slot</uri>
							<autoGrid>true</autoGrid>
						</Texture>

						 <!-- Slot slot_icon-->

						<Slot name="slot_item">
							<Anchors>
								<Anchor>
									<AbsDimension x="6" y="3" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="44" y="44" />
							</Size>
							<css>[local.css]normal.css</css>
						</Slot>					
					</Common>

					<State type="OVER">
						<SetProperties target="btn_item">
							<bgColor>[colors.grid.over]</bgColor>
						</SetProperties>
					</State>

					<State type="SELECTED">
						<SetProperties target="btn_item">
							<bgColor>[colors.grid.selected]</bgColor>
						</SetProperties>
					</State>

					<State type="SELECTED_OVER">
						<SetProperties target="btn_item">
							<bgColor>[colors.grid.selected]</bgColor>
						</SetProperties>
					</State>
				</Button>
			</Grid>
			
			<Texture name="tx_border">
				<Anchors>
					<Anchor>
						<AbsDimension x="19" y="137" />
					</Anchor>
				</Anchors>
