					<Anchor>
						<AbsDimension x="164" y="4" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="30" y="30" />
				</Size>
				<radioGroup>filterStock</radioGroup>
				<radioMode>true</radioMode>
				<uri>[local.assets]btn_weapons</uri>
			</iconButton>

			<iconButton name="btnConsumables">
				<Anchors>
					<Anchor>
						<AbsDimension x="204" y="4" />
