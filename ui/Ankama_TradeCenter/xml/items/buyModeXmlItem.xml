				<Anchors>
					<Anchor>
						<AbsDimension x="53" y="0" />
					</Anchor>
				</Anchors>

				<Texture>
					<Size>
						<AbsDimension x="123" y="48" />
					</Size>
					<uri>[local.assets]tx_invisible</uri>
				</Texture>
			</Common>
			
			<State type="OVER">
				<SetProperties target="btn_q1">
					<bgColor>[colors.grid.over]</bgColor>
				</SetProperties>
			</State>
			
			<State type="SELECTED">
				<SetProperties target="btn_q1">
					<bgColor>[colors.grid.selected]</bgColor>
				</SetProperties>
			</State>
			
			<State type="SELECTED_OVER">
				<SetProperties target="btn_q1">
					<bgColor>[colors.grid.selected]</bgColor>
				</SetProperties>
			</State>
		</Button>
				
