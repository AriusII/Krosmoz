<Definition>
   <Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
       <Constant name="css" value="[config.ui.skin]css/" />
   </Constants>

	<Container name="mainCtr">

		<!-- ICONE OBJET -->

		<Texture>
			<Anchors>
				<Anchor>
					<AbsDimension x="4" y="2" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="44" y="44" />
			</Size>
			<uri>[local.assets]tx_slot</uri>
			<autoGrid>true</autoGrid>
		</Texture>
		
		<Slot name="slot_icon">
			<Anchors>
				<Anchor>
					<AbsDimension x="4" y="2" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="44" y="44" />
			</Size>
			<Hooks>
				<onRollOver />
				<onRollOut />
				<onRightClick />
			</Hooks>
		</Slot>
		
		<!-- BOUTON QUANTITE 1 -->
		
		<Button name="btn_q1">		
