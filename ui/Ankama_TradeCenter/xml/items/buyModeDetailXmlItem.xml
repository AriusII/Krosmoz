<?xml version="1.0" encoding="UTF-8"?>
<Definition>
   <Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
       <Constant name="css" value="[config.ui.skin]css/" />
   </Constants>

	<Container name="mainCtr">

		<Button name="btn_item">		
			<Common>			
				<Anchors>
					<Anchor>
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				
				<Texture>
					<Size>
						<AbsDimension x="415" y="39" />
					</Size>
					<bgColor>0</bgColor>
					<bgAlpha>0</bgAlpha>
				</Texture>
				
				<Label name="lbl_name">	
					<Anchors>
						<Anchor>
							<AbsDimension x="5" y="5" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="260" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<mouseChildren>false</mouseChildren>
				</Label>
				
				<Label name="lbl_size">	
					<Anchors>
						<Anchor>
							<AbsDimension x="270" y="5" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="25" y="20" />
					</Size>
					<css>[local.css]normal.css</css>
					<mouseChildren>false</mouseChildren>
				</Label>
				
				<Label name="lbl_price">	
					<Anchors>
						<Anchor>
							<AbsDimension x="290" y="5" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="117" y="20" />
					</Size>
					<cssClass>right</cssClass>
					<css>[local.css]normal.css</css>
					<mouseChildren>false</mouseChildren>
				</Label>
			</Common>
			
			<State type="OVER">
				<SetProperties target="btn_item">
					<bgColor>[colors.grid.over]</bgColor>
				</SetProperties>
			</State>
			
			<State type="SELECTED">
				<SetProperties target="btn_item">
					<bgColor>[colors.grid.selected]</bgColor>
				</SetProperties>
			</State>
			
			<State type="SELECTED_OVER">
				<SetProperties target="btn_item">
					<bgColor>[colors.grid.selected]</bgColor>
				</SetProperties>
			</State>
		</Button>
	</Container>
</Definition>